<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="backgroundColor">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

    <style name="Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_h5</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Body.Big">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Body.Secondary">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AlertDialogTheme" parent="MaterialAlertDialog.MaterialComponents">
        <item name="materialAlertDialogTitleTextStyle">@style/CustomMaterialTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomMaterialBodyStyle</item>
    </style>

    <style name="CustomMaterialTitleStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/Title.Bold</item>
    </style>

    <style name="CustomMaterialBodyStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">@style/Subtitle</item>
    </style>

    <style name="Line">
        <item name="android:alpha">@dimen/material_emphasis_disabled</item>
        <item name="android:background">?attr/colorOnSurface</item>
    </style>

</resources>
